{
  "name": "isapp",
  "private": true,
  "workspaces": [
    "front",
    "back"
  ],
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist && cd back && yarn prestart:back:prod && cd ../front && yarn prestart:front:prod",
    "lint:code": "tslint {front,back,shared}/**/*.ts{,x} -c tslint.json",
    "lint": "yarn s lint && cd front && yarn lint:style",
    "types": "tcm front && tsc --noEmit -p front && tsc --noEmit -p back",
    "pretty": "yarn s pretty",
    "circular": "madge --circular --extensions ts ./ --tsConfig tsconfig.madge.json",
    "s": "yarn soda"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "tsconfig-paths": "^3.7.0",
    "tsoption": "^0.7.0"
  },
  "devDependencies": {
    "@solid-soda/scripts": "^1.0.6",
    "madge": "^3.4.3",
    "pm2": "^3.2.4",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn soda lint"
    ],
    "*.{js,jsx,ts,tsx,css,json}": [
      "yarn soda pretty",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
